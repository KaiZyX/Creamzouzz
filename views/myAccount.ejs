<!-- myAccount.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <style>
        #modifyUserForm {
            display: none;
        }
    </style>
    <script>
        function toggleForm(formId) {
            var form = document.getElementById(formId);
            if (form.style.display === "none") {
                form.style.display = "block";
            } else {
                form.style.display = "none";
            }
        }
    </script>
</head>
<body>
    <!-- Your HTML content -->
    <h1>User Information</h1>
    <% if (userData) { %>
        
        <p>Name: <%= userData.user_name %></p>
        <p>Email: <%= userData.user_email %></p>
        <p>Address: <%= userData.user_address %></p>
        
        
        
        <!-- Button to toggle user info modification form -->
        <button onclick="toggleForm('modifyUserForm')">Modify User Info</button>
        
        <!-- User info modification form -->
        <form id="modifyUserForm" action="/modifyUser" method="POST" >
            <!-- Input fields to modify user information -->
            <label for="user_name">Name:</label>
            <input type="text" id="user_name" name="user_name" value="<%= userData.user_name %>" required>
            <br>

            <label for="user_email">Email:</label>
            <input type="email" id="user_email" name="user_email" value="<%= userData.user_email %>" required>
            <br>

            <label for="user_address">Address:</label>
            <input type="text" id="user_address" name="user_address" value="<%= userData.user_address %>" required>
            <br>

            

            <button type="submit">Update</button>
        </form>
    <% } else { %>
        <p>No information found for this user.</p>
    <% } %>

    <!-- Your other HTML content -->
</body>
</html>
